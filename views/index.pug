extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Ethereum Balance fetcher

        form(method='GET' action='/')
          div.form-group
            label(for='name') Address:
            input#name.form-control(
              type='text', 
              placeholder='Enter', 
              name='address', 
              value=address)
          button.btn.btn-primary(type='submit') Check
    .row 
      .col-md-6.col-md-offset-3
        if result
          span
            h2#result=result + ' Ether'
        else if error
          h2=error  